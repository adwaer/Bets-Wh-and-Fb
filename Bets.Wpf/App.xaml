<Application x:Class="Bets.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Bets.Wpf.Controls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <controls:ValueToEqualsParameterConverter x:Key="ValueToEqualsParameterConverter"></controls:ValueToEqualsParameterConverter>

        <Style x:Key="TextBlockBrushStyle" TargetType="Button">
            <Style.Setters>
                <Setter Property="BorderBrush" Value="CornflowerBlue"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
                <Setter Property="Width" Value="65"></Setter>
                <Setter Property="Cursor" Value="Hand"></Setter>
            </Style.Setters>
            <Style.Triggers>
                <DataTrigger Value="true" Binding="{Binding Path=OldValue, RelativeSource={RelativeSource Self}, Converter={StaticResource ResourceKey=ValueToEqualsParameterConverter}}">
                    <Setter Property="Control.Background" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Image x:Key="RemoveImage" Source="Resources/Delete.png" />

        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="Cursor" Value="Hand"></Setter>
            </Style.Setters>
        </Style>

    </Application.Resources>

</Application>
